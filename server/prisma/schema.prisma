generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Patients {
  cpr       String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String
  lastName  String
  birthDate DateTime

  homeDoctor    Doctors @relation(fields: [homeDoctorCpr], references: [cpr])
  homeDoctorCpr String

  Appointments Appointments[]
  MedicalData  MedicalData?
}

model MedicalData {
  id           String   @id @default(uuid())
  // createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt
  Patient      Patients @relation(fields: [patientCpr], references: [cpr])
  patientCpr   String   @unique
  bloodStatus  String
  allergies    String // should be a list?
  vaccinations String // should be a list?
  // Appointments Appointments[]
}

model Doctors {
  cpr       String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String
  lastName  String
  birthDate DateTime

  Appointments Appointments[]

  Patients Patients[]
}

model Appointments {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  time        DateTime
  description String
  pending     Boolean  @default(true)
  approved    Boolean

  patient     Patients @relation(fields: [patientsCpr], references: [cpr])
  patientsCpr String

  doctor     Doctors @relation(fields: [doctorsCpr], references: [cpr])
  doctorsCpr String

  // medicalData   MedicalData @relation(fields: [medicalDataId], references: [id])
  // medicalDataId String
}

model Users {
  cpr            String @id
  hashedPassword String
  role           String
}

model RefreshTokens {
  token String @id
}
